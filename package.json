{
  "name": "lendroid",
  "version": "0.1.7",
  "description": "Web3.js wrapper that interacts with Lendroid Smart Contracts",
  "repository": "https://github.com/norestlabs/lendroid-js",
  "bugs": "https://github.com/norestlabs/lendroid-js/issues",
  "main": "dist/lendroid.js",
  "scripts": {
    "build": "rm -rf ./dist; tsc",
    "clean": "rm -rf node_modules ",
    "clean-install": "npm run clean && npm install",
    "lint": "tslint './src/**/*.ts' -p . -c tslint.json",
    "start": "webpack-dev-server --inline",
    "integration": "clear; npm run build && mocha --harmony ./dist/test/integration/**/*.js",
    "unit": "clear; mocha --harmony .dist/test/unit/**/*.js",
    "test": "clear; mocha --harmony ./dist/test/**/lendroid.js",
    "watch": "rm -rf ./dist && tsc --watch",
    "webpack": "webpack --display-error-details --progress --color --config webpack.config.js"
  },
  "author": "lendroid",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.17.1",
    "bignumber.js": "^6.0.0",
    "config": "^1.29.4",
    "ethjs": "^0.3.3",
    "isomorphic-fetch": "^2.2.1",
    "moment": "^2.20.1",
    "web3": "^1.0.0-beta.30"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.4.0",
    "chai": "^4.1.2",
    "ganache-cli": "^6.0.3",
    "mocha": "^5.0.0",
    "ts-loader": "^3.4.0",
    "tsc-watch": "^1.0.16",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1",
    "web3-typescript-typings": "^0.9.8",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.1"
  }
}
